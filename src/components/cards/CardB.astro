---
export interface Props {
  title?: string;
  description?: string;
  icon?: string;
  link?: string;
}

const {
  title = 'Feature Card',
  description = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.',
  icon = 'ðŸš€',
  link = '#',
} = Astro.props;

const cardId = `card-title-${title.replace(/\s+/g, '-').toLowerCase()}-${Math.random().toString(36).substring(2, 8)}`;
---

<article class="c--card-b js--reveal-item" aria-labelledby={cardId}>
  <div class="c--card-b__icon">
    <span class="c--card-b__icon-text" aria-hidden="true">{icon}</span>
  </div>
  <div class="c--card-b__content">
    <h3 class="c--card-b__title" id={cardId}>{title}</h3>
    <p class="c--card-b__description">{description}</p>
    <a href={link} class="c--card-b__link" aria-label={`Explore ${title}`}
      >Explore</a
    >
  </div>
</article>
