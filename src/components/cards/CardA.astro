---
import { Image } from 'astro:assets';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  link?: string;
}

const {
  title = 'Card Title',
  description = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.',
  image = 'https://placehold.co/400x300',
  link = '#',
} = Astro.props;

const cardId = `card-title-${title.replace(/\s+/g, '-').toLowerCase()}-${Math.random().toString(36).substring(2, 8)}`;
---

<article class="c--card-a js--reveal-item" aria-labelledby={cardId}>
  <div class="c--card-a__image">
    <Image
      src={image}
      alt={description ? description : title}
      width="400"
      height="200"
    />
  </div>
  <div class="c--card-a__content">
    <h3 class="c--card-a__title" id={cardId}>{title}</h3>
    <p class="c--card-a__description">{description}</p>
    <a
      href={link}
      class="c--card-a__link"
      aria-label={`Learn more about ${title}`}
    >
      Learn More
    </a>
  </div>
</article>
