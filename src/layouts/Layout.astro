---
import PreloaderA from '@components/preload/PreloaderA.astro';
import HeaderA from '@components/header/HeaderA.astro';
import '@scss/style.scss';

const {
  title = 'Terra Frontend Trial - Modern Web Development Solutions',
  description = 'A showcase of modern frontend development skills including HTML5, SCSS, JavaScript, GSAP animations, and responsive design best practices.',
  keywords = 'frontend development, web design, HTML5, SCSS, JavaScript, GSAP, responsive design, Terra',
  ogTitle = title,
  ogDescription = description,
  canonicalUrl = Astro.url.href,
} = Astro.props;
---

<script>
  import Project from '@js/Project.js';
  new Project();
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Terra Frontend Developer" />
    <link rel="canonical" href={canonicalUrl} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:site_name" content="Terra Frontend Trial" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={ogTitle} />
    <meta name="twitter:description" content={ogDescription} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://unpkg.com" />

    <link
      rel="stylesheet"
      href="https://unpkg.com/@terrahq/design-system@latest/dist/style.css"
    />

    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&display=swap"
      rel="stylesheet"
    />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Terra Frontend Trial",
        "description": "{description}",
        "url": "{canonicalUrl}",
        "author": {
          "@type": "Person",
          "name": "Terra Frontend Developer"
        },
        "potentialAction": {
          "@type": "SearchAction",
          "target": "{canonicalUrl}?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>

  <body>
    <PreloaderA />
    <HeaderA />

    <main id="main-content" class="c--page-a">
      <div class="c--page-a__ft-items">
        <slot />
      </div>
      <div class="c--page-a__bg-items"></div>
    </main>
  </body>
</html>
